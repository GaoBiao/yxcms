<?xml version="1.0" encoding="UTF-8"?>
<ehcache updateCheck="false" name="defaultCache">

	<diskStore path="./temp/ehcache/cms" />

	<!-- 默认缓存配置. -->
	<defaultCache maxEntriesLocalHeap="100" eternal="false" timeToIdleSeconds="300" timeToLiveSeconds="600" overflowToDisk="true" maxEntriesLocalDisk="100000" />

	<!-- 用户缓存 -->
	<cache name="userCache" maxEntriesLocalHeap="0" eternal="true" overflowToDisk="true" />

	<cache name="indexSliderCache" maxEntriesLocalHeap="0" eternal="true" overflowToDisk="true" />
	<cache name="moduleCache" maxEntriesLocalHeap="0" eternal="true" overflowToDisk="true" />

</ehcache>